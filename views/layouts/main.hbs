  <!--  Google Fonts-->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600&family=Ubuntu+Mono:wght@400;700&display=swap" rel="stylesheet">
  <!-- Plugin Styles -->
  <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
</head>
<body>
  {{> navigation }}
    <div class="wrapper">
      {{{body}}}
    </div>

  <div id="add-comment-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add A Comment</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="add-comment-form">
            <div class="form-group">
              <label for="exampleFormControlInput1">Name</label>
              <input type="text" class="form-control" id="comment_name">
            </div>
            <div class="form-group">
              <label for="exampleFormControlInput1">Comment</label>
              <textarea class="form-control" id="comment_body" rows="5"></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button id="add-comment-button" type="button" class="btn btn-primary">Add Comment</button>
        </div>
      </div>
    </div>
  </div>
</body>

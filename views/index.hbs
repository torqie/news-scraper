<div class="container">
  <div class="row">
    {{#if articles}}
      {{#each articles}}
        <div class="col-12 col-md-6 mb-4">
          <div class="card">
            <div class="card-body p-2">
<!--              <img src="..." class="card-img-top" alt="...">-->
              <h6 class="card-title">
                <a href="{{link}}">{{title}}</a>
              </h6>
              <p class="card-text">
                {{summary}}
              </p>
              <a class="card-link" href="#" data-type="add-to-fav" data-id="{{_id}}">
                {{#if favorite}}
                  <i class="fa fa-minus"></i> Remove Favorite
                {{else}}
                  <i class="fa fa-plus"></i> Add Favorite
                {{/if}}

              </a>
            </div>
          </div>
        </div>

      {{/each}}
    {{else}}
    <div class="row">
      <div class="col">
        <h1>Sorry no articles at this time... Why not <a href="#" class="scrape">scrape some</a>? </h1>
      </div>
    </div>
    {{/if}}
  </div>
</div>

